@model JobListing.Models.JobSkill

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>JobSkill</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Job)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Job.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Skill)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Skill.SkillName)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> @:|
        <a asp-action="Index" asp-route-id="@Model.JobID">Back to Job Skills</a>
    }
    else
    {
        <a asp-action="Index" asp-route-id="@Model.JobID">Back to Job Skills</a>
    }
</div>
